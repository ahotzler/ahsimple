<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 3.1//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="5.0" type="template" client="site">
	<name>ahsimple</name>
	<creationDate>13.12.2025</creationDate>
	<author>Andre Hotzler</author>
	<authorEmail>ahsimpletemplate@nspw.andrehotzler.de</authorEmail>
	<authorUrl>http://www.andrehotzler.de</authorUrl>
	<copyright>Copyright Andre Hotzler</copyright>
	<version>4.05</version>
	<description>ahsimple Template</description>
	<updateservers>
		<server type="extension" priority="2" name="TPL_AHSIMPLE_XML_UPDATE_NAME">https://downloads.andrehotzler.de/.ahsimple/ahsimple.xml</server>
	</updateservers>
	<files>
		<folder>html</folder>
		<folder>css</folder>
		<folder>images</folder>
		<filename>index.php</filename>
		<filename>parameters.php</filename>
		<filename>error.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>index.html</filename>
		<filename>templateDetails.xml</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/tpl_ahsimple.ini</language>
		<language tag="en-GB">en-GB/tpl_ahsimple.sys.ini</language>
		<language tag="de-DE">de-DE/tpl_ahsimple.ini</language>
		<language tag="de-DE">de-DE/tpl_ahsimple.sys.ini</language>
	</languages>
	<positions>
		<position>menu</position>
		<position>header</position>
		<position>footer</position>
		<position>pathway</position>
		<position>atthetop</position>
		<position>abovecontent</position>
		<position>beneathcontent</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="templatewidth" type="text" default="800px" label="TPL_AHSIMPLE_CONFIG_LABEL_TEMPLATEWIDTH" description="TPL_AHSIMPLE_CONFIG_DESC_TEMPLATEWIDTH" />
				<field name="headertype" type="list" default="sitename" label="TPL_AHSIMPLE_CONFIG_LABEL_HEADERTYPE" description="TPL_AHSIMPLE_CONFIG_DESC_HEADERTYPE">
					<option value="headerimage">TPL_AHSIMPLE_CONFIG_OPTION_HEADERIMAGE</option>
					<option value="sitename">TPL_AHSIMPLE_CONFIG_OPTION_SITENAME</option>
					<option value="owntext">TPL_AHSIMPLE_CONFIG_OPTION_OWNTEXT</option>
					<option value="nothing">TPL_AHSIMPLE_CONFIG_OPTION_NOTHING</option>
				</field>

				<field name="headerownext" type="text" default="My Own Site" label="TPL_AHSIMPLE_CONFIG_LABEL_OWNHEADERTEXT" showon="headertype:owntext" />
				<field name="headeralignment" type="list" default="sitename" label="TPL_AHSIMPLE_CONFIG_LABEL_HEADERALIGNMEN">
					<option value="left">TPL_AHSIMPLE_CONFIG_OPTION_LEFT</option>
					<option value="center">TPL_AHSIMPLE_CONFIG_OPTION_CENTERED</option>
					<option value="right">TPL_AHSIMPLE_CONFIG_OPTION_RIGHT</option>
				</field>
				<field name="linkedheader" type="radio" label="TPL_AHSIMPLE_CONFIG_LABEL_LINKEDHEADER" description="TPL_AHSIMPLE_CONFIG_DESC_LINKEDHEADER" layout="joomla.form.field.radio.switcher" default="0" filter="boolean">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="headerimage" type="media" default="./images/headers/blue-flower.jpg" label="TPL_AHSIMPLE_CONFIG_LABEL_HEADERIMAGELONGTEXT" showon="headertype:headerimage" />				
				<field name="sitebackgroundtype" type="list" default="image" label="TPL_AHSIMPLE_CONFIG_LABEL_SITEBACKGROUNDTYPE">
					<option value="image">TPL_AHSIMPLE_CONFIG_LABEL_BACKGROUNDIMAGE</option>
					<option value="color">TPL_AHSIMPLE_CONFIG_LABEL_BACKGROUNDCOLOR</option>
				</field>		
				<field name="sitebackgroundcolor" type="color" default="#eeeeee" label="TPL_AHSIMPLE_CONFIG_LABEL_BACKGROUNDCOLORLONGTEXT" showon="sitebackgroundtype:color" />
				<field name="sitebackgroundimage" type="media" default="./images/headers/blue-flower.jpg" label="TPL_AHSIMPLE_CONFIG_LABEL_BACKGROUNDIMAGE" showon="sitebackgroundtype:image" />
				<field name="font_family" label="TPL_AHSIMPLE_FONT_FAMILY_LABEL" description="TPL_AHSIMPLE_FONT_FAMILY_DESC" type="list" default="Roboto">
					<option value="Roboto">TPL_AHSIMPLE_FONT_FAMILY_ROBOTO</option>
					<option value="Roboto-Condensed">TPL_AHSIMPLE_FONT_FAMILY_ROBOTO_CONDENSED</option>
					<option value="Roboto-Slab">TPL_AHSIMPLE_FONT_FAMILY_ROBOTO_SLAB</option>
					<option value="Arial">TPL_AHSIMPLE_FONT_FAMILY_ARIAL</option>
					<option value="Times">TPL_AHSIMPLE_FONT_FAMILY_TIMES</option>
				</field>

				<field name="font_variant_roboto" label="TPL_AHSIMPLE_FONT_VARIANT_ROBOTO_LABEL" description="TPL_AHSIMPLE_FONT_VARIANT_ROBOTO_DESC" type="list" default="Regular" showon="font_family:Roboto">
					<option value="Thin">TPL_AHSIMPLE_FONT_VARIANT_ROBOTO_THIN</option>
					<option value="Light">TPL_AHSIMPLE_FONT_VARIANT_ROBOTO_LIGHT</option>
					<option value="Regular">TPL_AHSIMPLE_FONT_VARIANT_ROBOTO_REGULAR</option>
					<option value="Medium">TPL_AHSIMPLE_FONT_VARIANT_ROBOTO_MEDIUM</option>
					<option value="Bold">TPL_AHSIMPLE_FONT_VARIANT_ROBOTO_BOLD</option>
				</field>

				<field name="font_variant_roboto_condensed" label="TPL_AHSIMPLE_FONT_VARIANT_ROBOTO_CONDENSED_LABEL" description="TPL_AHSIMPLE_FONT_VARIANT_ROBOTO_CONDENSED_DESC" type="list" default="Regular" showon="font_family:Roboto-Condensed">
					<option value="Light">TPL_AHSIMPLE_FONT_VARIANT_ROBOTO_CONDENSED_LIGHT</option>
					<option value="Regular">TPL_AHSIMPLE_FONT_VARIANT_ROBOTO_CONDENSED_REGULAR</option>
				</field>

				<field name="font_variant_roboto_slab" label="TPL_AHSIMPLE_FONT_VARIANT_ROBOTO_SLAB_LABEL" description="TPL_AHSIMPLE_FONT_VARIANT_ROBOTO_SLAB_DESC" type="list" default="Regular" showon="font_family:Roboto-Slab">
					<option value="Thin">TPL_AHSIMPLE_FONT_VARIANT_ROBOTO_SLAB_THIN</option>
					<option value="Light">TPL_AHSIMPLE_FONT_VARIANT_ROBOTO_SLAB_LIGHT</option>
					<option value="Regular">TPL_AHSIMPLE_FONT_VARIANT_ROBOTO_SLAB_REGULAR</option>
				</field>
				<field name="headings_same_weight" type="radio" label="TPL_AHSIMPLE_HEADINGS_SAME_WEIGHT_LABEL" layout="joomla.form.field.radio.switcher" description="TPL_AHSIMPLE_HEADINGS_SAME_WEIGHT_DESC" default="1">
    				<option value="0">JNO</option>
    				<option value="1">JYES</option>
				</field>
				<field name="textcolor" type="color" default="#625f5f" label="TPL_AHSIMPLE_CONFIG_LABEL_TEXTCOLOR" />
				<field name="contrastcolor" type="color" default="#415a7d" label="TPL_AHSIMPLE_CONFIG_LABEL_CONTRASTCOLOR" />
				<field name="differentcontentlinkcolor" type="radio" label="TPL_AHSIMPLE_CONFIG_LABEL_DIFFERENTCONTENTLINKCOLOR" layout="joomla.form.field.radio.switcher" default="0" filter="boolean">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="hyperlinkcontentcolor" type="color" default="#415a7d" label="TPL_AHSIMPLE_CONFIG_LABEL_HYPERLINKCONTENTCOLOR" showon="differentcontentlinkcolor:1" />
				<field name="hyperlinkicon" type="radio" label="TPL_AHSIMPLE_CONFIG_LABEL_HYPERLINKICON" layout="joomla.form.field.radio.switcher" default="0" filter="boolean">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="hyperlinkicon_note" type="note" description="TPL_AHSIMPLE_CONFIG_HYPERLINKICON_NOTE" class="alert alert-info" showon="hyperlinkicon:1" />
				<field name="hyperlinkiconchar" type="text" default="\F08E" label="TPL_AHSIMPLE_CONFIG_LABEL_HYPERLINKICONCHAR" description="TPL_AHSIMPLE_CONFIG_DESC_HYPERLINKICONCHAR" showon="hyperlinkicon:1" />
				<field name="hyperlinkteliconchar" type="text" default="\F879" label="TPL_AHSIMPLE_CONFIG_LABEL_HYPERLINKTELICONCHAR" description="TPL_AHSIMPLE_CONFIG_DESC_HYPERLINKTELICONCHAR" showon="hyperlinkicon:1" />
				<field name="hyperlinkemailiconchar" type="text" default="\F0E0" label="TPL_AHSIMPLE_CONFIG_LABEL_HYPERLINKEMAILICONCHAR" description="TPL_AHSIMPLE_CONFIG_DESC_HYPERLINKEMAILICONCHAR" showon="hyperlinkicon:1" />
				<field name="innerbackgroundcolor" type="color" default="#ffffff" label="TPL_AHSIMPLE_CONFIG_LABEL_INNERBGCOLOR" />
				<field name="innerpaddingdesktop" type="text" default="48px" label="TPL_AHSIMPLE_CONFIG_LABEL_INNERPADDINGDESKTOP" />
				<field name="innerpaddingmobile" type="text" default="24px" label="TPL_AHSIMPLE_CONFIG_LABEL_INNERPADDINGMOBILE" />
				<field name="innerbackgroundroundedborders" type="list" default="5px" label="TPL_AHSIMPLE_CONFIG_LABEL_ROUNDEDBORDERS">
					<option value="0px">0px</option>
					<option value="3px">3px</option>
					<option value="5px">5px</option>
					<option value="10px">10px</option>
					<option value="15px">15px</option>
					<option value="20px">20px</option>
					<option value="25px">25px</option>
					<option value="30px">30px</option>
				</field>
				<field name="innerbackgroundopacity" type="list" default="0.95" label="TPL_AHSIMPLE_CONFIG_LABEL_BGOPACITY" showon="sitebackgroundtype:image">
					<option value="1">1</option>
					<option value="0.95">0.95</option>
					<option value="0.9">0.9</option>
					<option value="0.85">0.85</option>
					<option value="0.8">0.8</option>
					<option value="0.75">0.75</option>
					<option value="0.7">0.7</option>
				</field>
				<field name="fontsize" type="text" default="20px" label="TPL_AHSIMPLE_CONFIG_LABEL_FONTSIZE" description="TPL_AHSIMPLE_CONFIG_DESC_FONTSIZE" />
				<field name="h1size" type="text" default="32px" label="TPL_AHSIMPLE_CONFIG_LABEL_H1SIZE" description="TPL_AHSIMPLE_CONFIG_DESC_H1SIZE" />
				<field name="h2size" type="text" default="28px" label="TPL_AHSIMPLE_CONFIG_LABEL_H2SIZE" description="TPL_AHSIMPLE_CONFIG_DESC_H2SIZE" />
				<field name="h3size" type="text" default="24px" label="TPL_AHSIMPLE_CONFIG_LABEL_H3SIZE" description="TPL_AHSIMPLE_CONFIG_DESC_H3SIZE" />
				<field name="imagealign_note" type="note" description="TPL_AHSIMPLE_CONFIG_IMAGEALIGN_NOTE" class="alert alert-info" />
				<field name="alignedintroimagewidth" type="text" default="40%" label="TPL_AHSIMPLE_CONFIG_LABEL_ALIGNEDINTROIMAGEWIDTH" description="TPL_AHSIMPLE_CONFIG_DESC_ALIGNEDINTROIMAGEWIDTH" />
				<field name="alignedintroimagefullwidth" type="radio" label="TPL_AHSIMPLE_CONFIG_LABEL_ALIGNEDINTROIMAGEMOBILEFULLWIDTH" description="TPL_AHSIMPLE_CONFIG_DESC_ALIGNEDINTROIMAGEMOBILEFULLWIDTH" layout="joomla.form.field.radio.switcher" default="1" filter="boolean">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="alignedcontentimagewidth" type="text" default="40%" label="TPL_AHSIMPLE_CONFIG_LABEL_ALIGNEDCONTENTIMAGEWIDTH" description="TPL_AHSIMPLE_CONFIG_DESC_ALIGNEDCONTENTIMAGEWIDTH" />
				<field name="alignedcontimagefullwidth" type="radio" label="TPL_AHSIMPLE_CONFIG_LABEL_ALIGNEDCONTENTIMAGEMOBILEFULLWIDTH" description="TPL_AHSIMPLE_CONFIG_DESC_ALIGNEDCONTENTIMAGEMOBILEFULLWIDTH" layout="joomla.form.field.radio.switcher" default="0" filter="boolean">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field> 
				<field name="customcss_note" type="note" description="TPL_AHSIMPLE_CONFIG_CUSTOMCSS_NOTE" class="alert alert-info" />
				<field name="customcsscode" type="editor" editor="codemirror" filter="raw" default="" label="TPL_AHSIMPLE_CONFIG_LABEL_CUSTOMCSSCODE" description="TPL_AHSIMPLE_CONFIG_DESC_CUSTOMCSSCODE" />			<field name="customcodeattheend" type="editor" editor="codemirror" filter="raw" default="" label="TPL_AHSIMPLE_CONFIG_LABEL_CUSTOMCODEATTHEEND" description="TPL_AHSIMPLE_CONFIG_DESC_CUSTOMCODEATTHEEND" />
				<field name="custommeta" type="editor" editor="codemirror" filter="raw" default="" label="TPL_AHSIMPLE_CONFIG_LABEL_CUSTOMMETA" description="TPL_AHSIMPLE_CONFIG_DESC_CUSTOMMETA" />

									
			</fieldset>
		</fields>
	</config>
</extension>
